{
  "Version": "2008-10-17",
  "Statement": [
      {
          "Sid": "Put bucket policy needed for audit logging",
          "Effect": "Allow",
          "Principal": {
              "Service": "redshift.amazonaws.com"
          },
          "Action": [
              "s3:PutObject",
              "s3:GetBucketAcl"
          ],
          "Resource": [
              "${logging_bucket}",
              "${logging_bucket}/*"
          ]
      }
  ]
}