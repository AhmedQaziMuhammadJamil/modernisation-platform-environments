{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Sid": "Put bucket policy needed for audit logging",
          "Effect": "Allow",
          "Principal": {
              "Service": "redshift.amazonaws.com"
          },
          "Action": [
              "s3:PutObject",
              "s3:GetBucketAcl"
          ],
          "Resource": [
              "${bucket_arn}",
              "${bucket_arn}/*"
          ]
      }
  ]
}