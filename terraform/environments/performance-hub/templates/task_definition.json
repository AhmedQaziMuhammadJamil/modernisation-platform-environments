[{
  "name": "performance-hub",
  "image": "${ecr_url}:${container_version}",
  "cpu": 2048,
  "portMappings": [
    {
      "containerPort": 80,
      "hostPort": 8080
    }
  ],
  "memory": 4096,
  "logConfiguration": {
    "logDriver": "awslogs",
    "options": {
        "awslogs-group": "performance-hub-ecs",
        "awslogs-region": "eu-west-2",
        "awslogs-stream-prefix": "perf-hub"
     }
    },
  "environment" : [
    {
      "name" : "DB_HOST",
      "value" : "${db_host}"
    },
    {
      "name" : "DB_SCHEMA",
      "value": "${app_name}"
    },
    {
      "name" : "DB_USER",
      "value" : "${db_user}"
    },
    {
      "name" : "DB_PORT",
      "value" : "5432"
    }
  ],
  "secrets": [
    {
      "name": "DB_PASSWORD",
      "valueFrom": "${db_password}"
    },
    {
      "name": "MojHub_CnnStr",
      "valueFrom": "${mojhub_cnnstr}"
    },
    {
      "name": "MojHub_Membership",
      "valueFrom": "${mojhub_membership}"
    },
    {
      "name": "GOVUK_NOTIFY_API_KEY",
      "valueFrom": "${govuk_notify_api_key}"
    }
  ],
  "essential": true
}]
