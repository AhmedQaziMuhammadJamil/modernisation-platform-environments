[{
  "name": "performance-hub",
  "image": "${ecr_url}:${container_version}",
  "portMappings": [
    {
      "protocol": "tcp",
      "containerPort": 80
    }
  ],
  "mountPoints": [
    {
      "sourceVolume": "upload_volume",
      "containerPath": "/upload_volume"
    }
  ],
  "volumes": [
    {
        "name": "upload_volume",
        "host":  {
          "sourcePath" : "Y:/upload_data"
         }
    }
  ],
  "environment" : [
    {
      "name" : "DB_HOST",
      "value" : "${db_host}"
    },
    {
      "name" : "DB_SCHEMA",
      "value": "${app_name}"
    },
    {
      "name" : "DB_USER",
      "value" : "${db_user}"
    },
    {
      "name" : "DB_PORT",
      "value" : "5432"
    },
    {
      "name": "MojHub_CnnStr",
      "value": "Server=${db_host};Database=NomsPMU;User Id=${db_user};Password=;"
    },
    {
      "name": "MojHub_Membership",
      "value": "Server=${db_host};Database=Membership;User Id=${db_user};Password=;"
    }
  ],
  "secrets": [
    {
      "name": "DB_PASSWORD",
      "valueFrom": "${db_password}"
    }
  ],
  "essential": true
}]
